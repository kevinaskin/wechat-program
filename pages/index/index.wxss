/**index.wxss**/
.box{
  height: 100%;
}
.top-bar{
  height: 10vh;
  background-color: black;
  color:white;
  position: fixed;
  top:0;
  width:100%;
  z-index: 100;
}
.top-bar-item{
  float:left;
  font-size: 1.2rem;
  line-height: 3rem;
  margin-left: 1rem;
}
#index{
  font-family:Courier New, Courier, monospace;
}
.title{
  margin-top:80%;
  font-size: 1.2rem;
  
}
.content-box{
  padding-top:15%;
  text-align: center;
}
.content{
  font-size: .8rem;
}
.block-container{
  margin:5% auto;
  width:90%;
  padding:2%;
  border:1px solid #ccc;
}
.block-text{
  width:90%;
  font-size: .8rem;
  margin: 3rem auto;
  text-align: left;
}
text{
  width:100%;
}
.fixed-title{
  margin:-10rem auto;
  width:100%;
  height: 10%;
  text-align: center;
}
.text-box{
  position: absolute;
  top:20rem;
  width:100%;
  text-align: center;
}
.name{
  padding-top: 1rem;
  font-size: 2rem;
  font-family: Georgia, 'Times New Roman', Times, serif;
}